.personalizedDetail .header {
  height: 38vh;
}
.personalizedDetail .header image {
  width: 100%;
  height: 100%;
}
.personalizedDetail .content {
  height: calc(100vh - 38vh);
}
.personalizedDetail .content .personalizedItem {
  display: flex;
  padding: 20rpx 20rpx 0 20rpx;
}
.personalizedDetail .content .personalizedItem .info {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-around;
}
.personalizedDetail .content .personalizedItem .info .name {
  color: white;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.personalizedDetail .content .personalizedItem .info .desc {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
